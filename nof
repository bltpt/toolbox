#!/bin/bash

# nof.sh: Normalize Org File

# Test for presence of an input argument
if [ -z "$1" ]
then
    echo "Bad argument. Correct use:"
    echo ""
    echo "                            nof myfile.org"
else
    file=$1
    fileHeader=`head -n 1 $file`
    canonicalHeader=`projheader`

    # See if the org file has no TODO header
    # Pattern matching (==) has implicit anchoring, while
    # regexen (=~) requires anchors (^, $)?
    if [ `uname` == "Linux" ]
    then
	if [[ "$fileHeader" == '#+TODO'* ]]
	then
	    # Replace the line in the file
	    sed -i "1s/^#+TODO: .*/${canonicalHeader}/" $file
	else
	    if [ -z "$fileHeader" ]
	    then
		# You have an empty file
		echo "Error: file ${file} is empty or has a blank first line."
	    else
		# Assume the file has no TODO header and insert
		sed -i "1i${canonicalHeader}" $file
	    fi
	fi
    fi

    # Handle everything differently for a Mac, because the macOS
    # version of sed is difficult.
    if [ `uname` == "Darwin" ]
    then
	if [[ "$fileHeader" == '#+TODO'* ]]
	then
	    # Replace the line in the file
	    sed -i '' -e '1s/^#+TODO.*/${canonicalHeader}/' $file
	else
	    if [ -z "$fileHeader" ]
	    then
		# You have an empty file
		echo "Error: file ${file} is empty or has a blank first line."
	    else
		# Assume the file has no TODO header and insert
		sed -i '' -e $'1 i\\\n'"${canonicalHeader}" $file
	    fi
	fi
    fi
fi
